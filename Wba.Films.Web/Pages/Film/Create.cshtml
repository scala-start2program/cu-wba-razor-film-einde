@page
@model Wba.Films.Web.Pages.Film.CreateModel

@{
    ViewData["Title"] = "Nieuwe film";
}

<h1>Nieuwe film toevoegen</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Film.Titel" class="control-label"></label>
                <input asp-for="Film.Titel" class="form-control" />
                <span asp-validation-for="Film.Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Uitgiftedatum" class="control-label"></label>
                <input asp-for="Film.Uitgiftedatum" class="form-control" />
                <span asp-validation-for="Film.Uitgiftedatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Genre" class="control-label"></label>
                <input asp-for="Film.Genre" class="form-control" />
                <span asp-validation-for="Film.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Prijs" class="control-label"></label>
                <input asp-for="Film.Prijs" class="form-control" />
                <span asp-validation-for="Film.Prijs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Rating" class="control-label"></label>
                <select asp-for="Film.Rating" class="form-control">
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                    <option value="NC-17">NC-17</option>
                </select>
                @*<input asp-for="Film.Rating" class="form-control" />*@
                <span asp-validation-for="Film.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="btn-group">
                    <button type="submit" class="btn  btn-success" title="Opslaan">
                        <i class="far fa-save"></i>
                    </button>
                    <a asp-page="Index" class="btn btn-danger" title="Annuleren">
                        <i class="fas fa-undo-alt"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
